+/delete-node/ &pinctrl_uart4;
+
+&iomuxc {
+	mcm-imx8m-mini-rs485 {
+		pinctrl_uart4: uart4grp {
+			fsl,pins = <
+				MX8MM_IOMUXC_ECSPI2_MISO_GPIO5_IO12      0x140
